<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.StudentManagementController">
   <children>
      <TableView fx:id="tableView" layoutX="100.0" layoutY="50.0" prefHeight="322.0" prefWidth="600.0">
        <columns>
          <TableColumn fx:id="BUIDColumn" prefWidth="75.0" text="BUID" />
          <TableColumn fx:id="firstNameColumn" prefWidth="75.0" text="First Name" />
            <TableColumn fx:id="middleNameColumn" prefWidth="75.0" text="Middle Name" />
            <TableColumn fx:id="lastNameColumn" prefWidth="75.0" text="Last Name" />
            <TableColumn fx:id="conditionColumn" onEditCommit="#changeConditionCellEvent" prefWidth="75.0" text="Condition" />

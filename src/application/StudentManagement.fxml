         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button layoutX="583.0" layoutY="444.0" mnemonicParsing="false" onAction="#saveStudentConditionButton" prefHeight="27.0" prefWidth="116.0" text="Save" />
